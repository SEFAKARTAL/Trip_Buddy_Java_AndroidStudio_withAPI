<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".scene_12">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="#232323"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:radius="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/hotel_background"
                app:shapeAppearanceOverlay="@style/roundimageview" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <!--İsteğe bağlı align:center eklenebilir (Buna ekstra olarak Her şey ortaya alınabilir)-->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:fontFamily="@font/poppins"
                    android:text="ddd"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    tools:ignore="ExtraText">
                    <!--Bu yıldızlar yerine JSON'dan çekilen puanlamayı 10 üzerinden text olarak yazabiliriz.-->
                    <ImageView
                        android:id="@+id/starOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="113dp"
                        android:background="@drawable/star" />
                    <ImageView
                        android:id="@+id/starTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="125dp"
                        android:background="@drawable/star" />
                    <ImageView
                        android:id="@+id/starThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="137dp"
                        android:background="@drawable/star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="163dp"
                        android:background="@drawable/star" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:background="@drawable/star" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0"
                    android:alpha="0"
                    android:text="ddd"
                    android:fontFamily="@font/poppins"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="95dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.3">

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/priceshape"
                        android:fontFamily="@font/poppins"
                        android:paddingTop="10dp"
                        android:text="ddd"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/priceButton"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:alpha="0" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="8.6dp"
                        android:background="@drawable/pricerectangle"
                        android:fontFamily="@font/poppins"
                        android:text=">"
                        android:textColor="#000"
                        android:textAlignment="center" />


                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>