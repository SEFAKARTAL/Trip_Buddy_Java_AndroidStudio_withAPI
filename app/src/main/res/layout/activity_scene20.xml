<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resource"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    tools:context=".scene_20">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:srcCompat="@drawable/shape_1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/geriButtonn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/geri" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="94dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/head2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="66dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Türkçe"
                    android:textColor="@color/white"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="47dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/round3"
                    android:backgroundTint="#2D2D2D" />
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="66dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="İngilizce"
                    android:textColor="@color/white"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/yabancıDilButton"
                    android:layout_width="47dp"
                    android:clickable="true"
                    android:layout_height="32dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round3"
                    android:backgroundTint="#2D2D2D" />
                />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            app:srcCompat="@drawable/shape_6" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>